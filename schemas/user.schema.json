{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/jamestravers/customer-transaction-analytics/schemas/user.schema.json",
  "title": "User",
  "description": "Synthetic user profile generated by Faker for the transaction producer",
  "type": "object",
  "required": ["user_id", "name", "email"],
  "properties": {
    "user_id": {
      "type": "string",
      "description": "Unique user identifier",
      "pattern": "^user_\\d{6}$"
    },
    "name": {
      "type": "string",
      "description": "Full name of the user"
    },
    "email": {
      "type": "string",
      "format": "email",
      "description": "User email address"
    }
  },
  "additionalProperties": false
}
